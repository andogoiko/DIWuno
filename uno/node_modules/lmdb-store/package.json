{
  "name": "lmdb-store",
  "author": "Kris Zyp",
  "version": "1.6.7",
  "description": "Simple, efficient, scalable data store wrapper for LMDB",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/DoctorEvidence/lmdb-store"
  },
  "keywords": [
    "lmdb",
    "database",
    "mdb",
    "lightning"
  ],
  "type": "commonjs",
  "main": "./index.js",
  "exports": {
    "import": "./index.mjs",
    "require": "./index.js"
  },
  "types": "./index.d.ts",
  "tsd": {
    "directory": "test/types"
  },
  "scripts": {
    "install": "node-gyp-build",
    "recompile": "node-gyp clean && node-gyp configure && node-gyp build -d",
    "test": "mocha test/**.test.js --recursive && npm run test:types",
    "test2": "mocha tests -u tdd",
    "test:types": "tsd",
    "benchmark": "node --turbo-fast-api-calls ./benchmark/index.js",
    "benchmark-ll": "node ./benchmark/low-level.js"
  },
  "gypfile": true,
  "dependencies": {
    "mkdirp": "^1.0.4",
    "nan": "^2.14.2",
    "node-gyp-build": "^4.2.3",
    "ordered-binary": "^1.0.0",
    "weak-lru-cache": "^1.0.0"
  },
  "optionalDependencies": {
    "msgpackr": "^1.3.7"
  },
  "devDependencies": {
    "@types/node": "^16.7.10",
    "benchmark": "^2.1.4",
    "chai": "^4.3.4",
    "fs-extra": "^9.0.1",
    "jshint": "^2.12.0",
    "mocha": "^8.3.2",
    "node-gyp": "^8.0.0",
    "rimraf": "^3.0.2",
    "tsd": "^0.14.0"
  }
}
